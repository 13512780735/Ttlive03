<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_b"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.likeits.ttlive.activitys.ui.me.ApplyErederActivity">

    <include layout="@layout/layout_header_with_back"></include>
    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        android:id="@+id/apply_scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@color/background_b">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_basics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="10dip"
                    android:text="基本资料"
                    android:textColor="@color/defualt_textcolor_d" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_basics"
                    android:gravity="center_vertical"
                    android:text="(必填)"
                    android:textColor="@color/defualt_textcolor_j" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:orientation="horizontal"
                    android:padding="10dip">

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="姓名" />

                    <EditText
                        android:id="@+id/apply_et_name"
                        android:layout_width="0dip"
                        android:layout_height="30dip"
                        android:layout_marginLeft="10dip"
                        android:layout_weight="3"
                        android:background="@null"
                        android:hint="请输入您的真实姓名"
                        android:textColor="@color/defualt_textcolor_f"
                        android:textSize="14sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@color/line_color"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:orientation="horizontal"
                    android:padding="10dip">

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="身份证号码" />

                    <EditText
                        android:id="@+id/apply_et_id_card"
                        android:layout_width="0dip"
                        android:layout_height="30dip"
                        android:layout_marginLeft="10dip"
                        android:layout_weight="3"
                        android:background="@null"
                        android:hint="请输入您的身份证号码"
                        android:textColor="@color/defualt_textcolor_f"
                        android:textSize="14sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@color/line_color"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:orientation="horizontal"
                    android:padding="10dip">

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="手机号码" />

                    <EditText
                        android:id="@+id/apply_et_phone"
                        android:layout_width="0dip"
                        android:layout_height="30dip"
                        android:layout_marginLeft="10dip"
                        android:layout_weight="3"
                        android:background="@null"
                        android:hint="请填写手机号码"
                        android:textColor="@color/defualt_textcolor_f"
                        android:textSize="14sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@color/line_color"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:orientation="horizontal"
                    android:padding="10dip">

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="验证码" />

                    <EditText
                        android:id="@+id/apply_et_code"
                        android:layout_width="0dip"
                        android:layout_height="30dip"
                        android:layout_marginLeft="10dip"
                        android:layout_weight="3"
                        android:background="@null"
                        android:hint="请输入验证码"
                        android:textColor="@color/defualt_textcolor_f"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/send_code_btn"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dip"
                        android:layout_weight="2"
                        android:background="@drawable/shape_round_send_code_btn_"
                        android:padding="10dip"
                        android:text="发送验证码"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_up_id_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="10dip"
                    android:text="上传身份证明"
                    android:textColor="@color/defualt_textcolor_d" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_up_id_card"
                    android:gravity="center_vertical"
                    android:text="(必填)"
                    android:textColor="@color/defualt_textcolor_j" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="10dip"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:paddingTop="10dip">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_id_card_positive"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="5dip"
                        android:scaleType="fitXY"
                        android:src="@mipmap/id_card_positive_bg"/>

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@mipmap/id_card_positive_bg01" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_id_card_contrary"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:padding="5dip"
                        android:src="@mipmap/id_card_contrary_bg"/>
                    <ImageView
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@mipmap/id_card_contrary_bg01"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_id_hand_card"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:layout_weight="1"
                        android:padding="5dip"
                        android:src="@mipmap/id_hand_card_bg"/>
                    <ImageView
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@mipmap/id_hand_card_bg01"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_apply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:layout_margin="20dip"
                android:gravity="center"
                android:text="申请"
                android:textColor="@color/white"
                android:background="@drawable/shape_round_login_btn_"/>
        </LinearLayout>
    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>
</LinearLayout>
