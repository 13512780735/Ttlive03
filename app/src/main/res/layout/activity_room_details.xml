<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_b"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="com.likeits.ttlive.activitys.ui.live.RoomDetailsActivity">

    <include layout="@layout/layout_header_with_back"></include>

    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        android:id="@+id/room_details_scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@color/background_b">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/live_room_header_userData"
                android:layout_width="match_parent"
                android:layout_height="80dip"
                android:background="@color/white"
                android:orientation="horizontal">

                <com.likeits.ttlive.activitys.view.CircleImageView
                    android:id="@+id/live_room_header_avatar"
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dip"
                    android:src="@mipmap/test04" />

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="10dip"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dip"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/live_room_header_name"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="小灰灰"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/live_room_header_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dip"
                            android:layout_toRightOf="@+id/live_room_header_name"
                            android:background="@drawable/button_orange_bg01"
                            android:drawableLeft="@mipmap/icon_me_star"
                            android:drawablePadding="5dip"
                            android:paddingLeft="5dip"
                            android:paddingRight="5dip"
                            android:text="15"
                            android:textColor="@color/defualt_textcolor_g"
                            android:textSize="12sp" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/live_room_tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:drawableLeft="@mipmap/icon_me_boy"
                        android:drawablePadding="10dip"
                        android:gravity="center_vertical"
                        android:text="24岁，中山市"
                        android:textColor="@color/defualt_textcolor_d"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dip"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="60dip"
                        android:layout_weight="1"

                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@mipmap/icon_me_usercentre_fans01" />

                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dip"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="bottom"
                                android:text="19"
                                android:textSize="12sp"
                                android:textColor="@color/defualt_textcolor_d" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dip"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:text="粉丝"
                                android:textSize="12sp"
                                android:textColor="@color/defualt_textcolor_d" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="60dip"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@mipmap/icon_me_usercentre_charm01"
                            />

                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dip"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="bottom"
                                android:text="33.6万"
                                android:textSize="12sp"
                                android:textColor="@color/defualt_textcolor_d" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dip"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:text="魅力值"
                                android:textSize="12sp"
                                android:textColor="@color/defualt_textcolor_d" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="10dip"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                >
                <TextView
                    android:id="@+id/tv_type01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dip"
                    android:textColor="@color/defualt_textcolor_c"
                    android:text="房间分类"/>
                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dip"
                    android:layout_toRightOf="@+id/tv_type01"
                    android:layout_marginLeft="20dip"
                    android:textColor="@color/defualt_textcolor_c"
                    android:text="男女模"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/line_color"></View>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                >
                <TextView
                    android:id="@+id/tv_introduce01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dip"
                    android:textColor="@color/defualt_textcolor_c"
                    android:text="房间介绍"/>
                <TextView
                    android:id="@+id/tv_introduce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dip"
                    android:layout_toRightOf="@+id/tv_introduce01"
                    android:layout_marginLeft="20dip"
                    android:textColor="@color/defualt_textcolor_c"
                    android:text="小灰灰的直播间"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/line_color"></View>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                >
                <TextView
                    android:id="@+id/tv_notice01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dip"
                    android:textColor="@color/defualt_textcolor_c"
                    android:text="房间公告"/>
                <TextView
                    android:id="@+id/tv_notice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dip"
                    android:layout_below="@+id/tv_notice01"
                    android:textColor="@color/defualt_textcolor_c"
                    android:layout_marginBottom="40dip"
                    android:text="我是直播间主播"/>
            </RelativeLayout>
        </LinearLayout>
        </LinearLayout>
    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>
</LinearLayout>