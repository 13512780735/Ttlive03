<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.likeits.ttlive.activitys.ui.me.UserCentreActivity">


    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        android:id="@+id/user_centre_scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@color/background_b">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/user_centre_header_bg"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_header"
                    android:layout_width="fill_parent"
                    android:layout_height="70dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/backBtn"
                        android:layout_width="60.0dip"
                        android:layout_height="fill_parent"
                        android:layout_centerVertical="true"
                        android:background="@drawable/header_back_bg"
                        android:drawableLeft="@drawable/header_back"
                        android:drawableStart="@drawable/header_back"
                        android:paddingLeft="10dp"
                        android:paddingTop="20dip" />

                    <TextView
                        android:id="@+id/tv_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:maxLength="8"
                        android:paddingTop="20dip"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_size_normal" />

                    <TextView
                        android:id="@+id/tv_right"
                        android:layout_width="50dip"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:maxLength="8"
                        android:paddingTop="20dip"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_normal" />

                </RelativeLayout>

                <FrameLayout
                    android:layout_width="70dip"
                    android:layout_height="70dip"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dip">

                    <com.likeits.ttlive.activitys.view.CircleImageView
                        android:layout_width="70dip"
                        android:layout_height="70dip"
                        android:src="@mipmap/test01" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent">

                        <ImageView
                            android:id="@+id/iv_message_chat_v1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:src="@mipmap/icon_me_take_photo" />
                    </RelativeLayout>
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:drawableLeft="@mipmap/icon_me_boy"
                    android:drawablePadding="10dip"
                    android:padding="10dip"
                    android:text="中山市"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_marginTop="10dip"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="60dip"
                        android:layout_weight="1"

                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@mipmap/icon_me_usercentre_fans" />

                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dip"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="bottom"
                                android:text="19"
                                android:textColor="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dip"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:text="粉丝"
                                android:textColor="@color/defualt_textcolor_v" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="60dip"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@mipmap/icon_me_usercentre_heroic" />

                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dip"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="bottom"
                                android:text="143.2万"
                                android:textColor="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dip"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:text="枭雄值"
                                android:textColor="@color/defualt_textcolor_v" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="60dip"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@mipmap/icon_me_usercentre_charm" />

                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dip"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="bottom"
                                android:text="33.6万"
                                android:textColor="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dip"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:text="魅力值"
                                android:textColor="@color/defualt_textcolor_v" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="60dip"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@mipmap/icon_me_usercentre_grade" />

                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dip"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="bottom"
                                android:text="8"
                                android:textColor="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dip"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:text="等级"
                                android:textColor="@color/defualt_textcolor_v" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:background="@color/defualt_textcolor_x">

                    <ImageView
                        android:id="@+id/iv_notice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:padding="10dip"
                        android:src="@mipmap/icon_user_centre_notice" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="40dip"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dip"
                        android:layout_toRightOf="@+id/iv_notice"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dip"
                            android:gravity="center_vertical"
                            android:text="个人资料有20%未完善"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dip"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:text="描述完整的自己,让更多人愿意和你交朋友"
                            android:textColor="@color/white"
                            android:textSize="14sp" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">
            <com.likeits.ttlive.activitys.custom.CustomScrollGridView
                android:id="@+id/gv_all_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dip"
                android:gravity="center"
                android:horizontalSpacing="5dp"
                android:listSelector='#00000000'
                android:numColumns="5"
                android:scrollbars="none"
                android:verticalSpacing="5dp"></com.likeits.ttlive.activitys.custom.CustomScrollGridView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@color/line_color"></View>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_qianming01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dip"
                        android:text="个人签名"
                        android:textColor="@color/defualt_textcolor_d"/>
                    <TextView
                        android:id="@+id/tv_qianming"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dip"
                        android:text="收获即是过去"
                        android:layout_toRightOf="@+id/tv_qianming01"
                        android:layout_marginLeft="10dip"
                        android:textColor="@color/defualt_textcolor_c"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/icon_right_grey"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@color/line_color"></View>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_trends01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dip"
                        android:text="个人动态"
                        android:textColor="@color/defualt_textcolor_d"/>
                  <com.likeits.ttlive.activitys.view.MyGridView
                      android:id="@+id/trends_gridview"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:numColumns="5"
                      android:horizontalSpacing="5dip"
                      ></com.likeits.ttlive.activitys.view.MyGridView>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/icon_right_grey"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@color/line_color"></View>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_fun01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dip"
                        android:text="兴趣标签"
                        android:textColor="@color/defualt_textcolor_d"/>
                    <TextView
                        android:id="@+id/tv_fun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dip"
                        android:text=""
                        android:layout_toRightOf="@+id/tv_fun01"
                        android:layout_marginLeft="10dip"
                        android:textColor="@color/defualt_textcolor_c"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/icon_right_grey"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@color/line_color"></View>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_grade01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dip"
                        android:text="等级说明"
                        android:textColor="@color/defualt_textcolor_d"/>
                    <TextView
                        android:id="@+id/tv_grade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dip"
                        android:text=""
                        android:layout_toRightOf="@+id/tv_grade01"
                        android:layout_marginLeft="10dip"
                        android:textColor="@color/defualt_textcolor_c"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/icon_right_grey"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:text="我的房间"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:background="@color/white">
                <TextView
                    android:id="@+id/tv_room01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dip"
                    android:text="0"
                    android:textColor="@color/bgcolor"/>
                <TextView
                android:id="@+id/tv_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:text="客栈"
                android:layout_toRightOf="@+id/tv_room01"
                android:layout_marginLeft="10dip"
                android:textColor="@color/defualt_textcolor_c"/>
                <TextView
                    android:id="@+id/tv_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dip"
                    android:text="ID:328945"
                    android:layout_marginLeft="10dip"
                    android:layout_alignParentRight="true"
                    android:drawablePadding="10dip"
                    android:drawableRight="@mipmap/icon_right_grey"
                    android:textColor="@color/defualt_textcolor_c"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_gift"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dip"
                    android:text="收到的礼物"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_gift"
                    android:text="685"
                    android:textSize="12sp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/defualt_textcolor_c"/>
            </RelativeLayout>
            <com.likeits.ttlive.activitys.view.MyGridView
                android:id="@+id/user_centre_gift_gridview"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="wrap_content"
                android:horizontalSpacing="5dip"
                android:padding="10dip"
                android:numColumns="5"></com.likeits.ttlive.activitys.view.MyGridView>
        </LinearLayout>
    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>
</LinearLayout>







