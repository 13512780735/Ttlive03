<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_b"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="com.likeits.ttlive.activitys.ui.me.UserEditActivity">

    <include layout="@layout/layout_header_with_back"></include>

    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        android:id="@+id/dvise_scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@color/background_b">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip">

                    <TextView
                        android:id="@+id/tv_avatar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:padding="10dip"
                        android:layout_marginRight="30dip"
                        android:text="头像"
                        android:textColor="@color/defualt_textcolor_c" />

                    <FrameLayout
                        android:layout_width="50dip"
                        android:layout_height="50dip"
                        android:layout_gravity="center"
                        android:layout_margin="5dip"
                        android:layout_marginLeft="30dip"
                        android:layout_toRightOf="@+id/tv_avatar">

                        <com.likeits.ttlive.activitys.view.CircleImageView
                            android:id="@+id/user_iv_avatar"
                            android:layout_width="50dip"
                            android:layout_height="50dip"
                            android:src="@mipmap/test01" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent">

                            <ImageView
                                android:id="@+id/iv_message_chat_v1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:src="@mipmap/icon_me_take_photo" />
                        </RelativeLayout>
                    </FrameLayout>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@color/line_color"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="10dip"
                    android:paddingTop="15dip"
                    android:paddingBottom="15dip"
                    android:paddingRight="10dip">

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:padding="10dip"
                        android:text="昵称"
                        android:textColor="@color/defualt_textcolor_c" />

                    <EditText
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:background="@null"
                        android:padding="10dip"
                        android:text="xiaohuihui" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@color/line_color"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="10dip"
                    android:paddingTop="15dip"
                    android:paddingBottom="15dip"
                    android:paddingRight="10dip">

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:padding="10dip"
                        android:text="个性签名"
                        android:textColor="@color/defualt_textcolor_c" />

                    <EditText
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:background="@null"
                        android:padding="10dip"
                        android:text="xiaohuihui" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@color/line_color"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="10dip"
                    android:paddingTop="15dip"
                    android:paddingBottom="15dip"
                    android:paddingRight="10dip">

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:padding="10dip"
                        android:text="性别"
                        android:textColor="@color/defualt_textcolor_c" />

                    <RadioGroup
                        android:id="@+id/sex_radio_group"
                        android:layout_width="0dip"
                        android:layout_weight="5"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/man_radio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="男"
                            android:checked="true"
                            android:textColor="@color/defualt_textcolor"
                            android:textSize="12sp" />

                        <RadioButton
                            android:id="@+id/woman_radio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="10dp"
                            android:text="女"
                            android:textColor="@color/defualt_textcolor"
                            android:textSize="12sp" />
                    </RadioGroup>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@color/line_color"></View>

                <LinearLayout
                    android:id="@+id/ll_birthday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="10dip"
                    android:paddingTop="15dip"
                    android:paddingBottom="15dip"
                    android:paddingRight="10dip">

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:padding="10dip"
                        android:text="生日"
                        android:textColor="@color/defualt_textcolor_c" />
                    <TextView
                        android:id="@+id/birthday_et"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:layout_below="@+id/birthday_tv"
                        android:layout_toRightOf="@+id/icon_birthday"
                        android:text="0000-00-00"
                        android:gravity="center_vertical"
                        android:padding="10dip"
                        android:inputType="number"
                        android:textSize="14sp" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/icon_down"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@color/line_color"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="10dip"
                    android:paddingTop="15dip"
                    android:paddingBottom="15dip"
                    android:paddingRight="10dip">

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:padding="10dip"
                        android:text="标签"
                        android:textColor="@color/defualt_textcolor_c" />

                    <EditText
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:background="@null"
                        android:text="" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>
</LinearLayout>