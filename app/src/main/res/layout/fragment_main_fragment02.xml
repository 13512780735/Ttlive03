<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.likeits.ttlive.activitys.fragment.MainFragment02">

    <include layout="@layout/layout_header_with_back"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_new_friends"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_new_friends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_new_friends" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@+id/iv_new_friends"
                android:gravity="center_vertical"
                android:text="新的朋友"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_friends"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_friends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_friends" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@+id/iv_friends"
                android:gravity="center_vertical"
                android:text="好友"
                android:textSize="14sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_near"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_near"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_near" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@+id/iv_near"
                android:gravity="center_vertical"
                android:text="附近的人"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dip"
        android:background="@color/line_color"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rl_true_words"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dip">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_true_words"
                android:gravity="center_vertical"
                android:drawablePadding="10dip"
                android:text="真心话"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="快速匹配"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:drawablePadding="10dip"
                android:textSize="12sp"
                android:textColor="@color/defualt_textcolor_d"
                android:drawableRight="@mipmap/icon_right_grey"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/line_color"></View>
        <RelativeLayout
            android:id="@+id/rl_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dip">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_chat"
                android:gravity="center_vertical"
                android:drawablePadding="10dip"
                android:text="闲聊大厅"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text=""
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:drawablePadding="10dip"
                android:textSize="12sp"
                android:textColor="@color/defualt_textcolor_d"
                android:drawableRight="@mipmap/icon_right_grey"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/line_color"></View>
        <RelativeLayout
            android:id="@+id/rl_circle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dip">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_circle01"
                android:gravity="center_vertical"
                android:drawablePadding="10dip"
                android:text="动态圈"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text=""
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:drawablePadding="10dip"
                android:textSize="12sp"
                android:textColor="@color/defualt_textcolor_d"
                android:drawableRight="@mipmap/icon_right_grey"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/line_color"></View>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/line_color"
        android:textColor="@color/defualt_textcolor_d"
        android:textSize="12sp"
        android:paddingLeft="10dip"
        android:text="最近聊天"/>
</LinearLayout>
