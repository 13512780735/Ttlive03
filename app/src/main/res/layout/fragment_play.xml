<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.likeits.ttlive.activitys.fragment.PlayFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/dialog_iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dip"
        android:src="@mipmap/icon_dialog_close" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_iv_close"
        android:layout_marginLeft="60dip"
        android:layout_marginRight="60dip"
        android:layout_marginTop="20dip"
        android:background="@drawable/dialog_bg_a"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dip"
            android:background="@drawable/dialog_bg">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="交友"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </RelativeLayout>

        <com.likeits.ttlive.activitys.view.MyListview
            android:id="@+id/home_dialog_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dip"></com.likeits.ttlive.activitys.view.MyListview>
    </LinearLayout>
</RelativeLayout>
