<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.likeits.ttlive.activitys.fragment.TrueWordsDialogFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/pay_dialog_iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="80dip"
        android:src="@mipmap/icon_dialog_close" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pay_dialog_iv_close"
        android:layout_marginLeft="80dip"
        android:layout_marginRight="80dip"
        android:layout_marginTop="40dip"
        android:background="@drawable/dialog_bg_a"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dip"
            android:background="@drawable/dialog_bg">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="匹配成功"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/pay_dialog_tv_rubyNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dip"
            android:textColor="@color/defualt_textcolor_c"
            android:gravity="center_horizontal"
            android:text="成功找到了一名用户进行真心话大冒险" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/line_color"></View>
        <RelativeLayout
            android:id="@+id/pay_dialog_rl_zfb"
            android:layout_width="match_parent"

            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:layout_marginLeft="10dip"
                android:textColor="@color/defualt_textcolor_c"
                android:drawablePadding="10dip"
                android:layout_margin="20dip"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:gravity="center_vertical"
                android:layout_centerInParent="true"
                android:text="开始真心话"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:gravity="center_vertical"
                android:src="@mipmap/icon_right_grey" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
