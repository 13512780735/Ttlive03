<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.likeits.ttlive.activitys.view.CircleImageView
            android:id="@+id/chat_circle_avatar"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_gravity="center"
            android:layout_marginLeft="10dip"
            android:src="@mipmap/test04" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dip"
            android:layout_weight="2"
            android:orientation="vertical">


            <TextView
                android:id="@+id/chat_circle_name"
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="小灰灰"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dip"

                android:layout_weight="1">

                <TextView
                    android:id="@+id/chat_circle_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="17:30"
                    android:textSize="12sp"
                    android:textColor="@color/defualt_textcolor_d" />

                <TextView
                    android:id="@+id/chat_circle_read"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@+id/chat_circle_time"
                    android:textColor="@color/defualt_textcolor_d"
                    android:layout_marginLeft="10dip"
                    android:text="888阅读"
                    android:textSize="12sp"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:text="我是动态圈我是动态圈我是动态圈我是动态圈我是动态圈我是动态圈我是动态圈我是动态圈我是动态圈我是动态圈我是动态圈我是动态圈我是动态圈我是动态圈我是动态圈"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dip"
            android:src="@mipmap/test06"/>
        <ImageView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dip"
            android:src="@mipmap/test06"/>
        <ImageView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dip"
            android:src="@mipmap/test06"/>
    </LinearLayout>

</LinearLayout>